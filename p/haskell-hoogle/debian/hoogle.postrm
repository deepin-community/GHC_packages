#!/bin/sh
## ----------------------------------------------------------------------
## debian/postrm : postremoval script for hoogle
## ----------------------------------------------------------------------

## ----------------------------------------------------------------------
set -e

## ----------------------------------------------------------------------
if [ "$1" = "purge" ]
then

    ## ------------------------------------------------------------------
    ## remove /var/lib/hoogle
    [ -d /var/lib/hoogle/databases ] && rm -rf /var/lib/hoogle/databases

fi

## ----------------------------------------------------------------------
exit 0

## ----------------------------------------------------------------------
