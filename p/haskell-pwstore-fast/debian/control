  , ghc
  , ghc-prof
  , libghc-base64-bytestring-dev (>> 0.1)
  , libghc-base64-bytestring-prof
  , libghc-cryptohash-dev (>> 0.6)
  , libghc-cryptohash-prof
  , libghc-random-dev (>> 1)
  , libghc-random-prof
