  libghc-hunit-prof,
  libghc-mtl-prof,
  libghc-network-prof,
  libghc-opengl-prof,
  libghc-openglraw-prof,
  libghc-parallel-prof,
  libghc-parsec3-prof,
  libghc-primitive-prof,
  libghc-quickcheck2-prof,
  libghc-random-prof,
  libghc-regex-base-prof,
  libghc-regex-compat-prof,
  libghc-regex-posix-prof,
  libghc-split-prof,
  libghc-stm-prof,
