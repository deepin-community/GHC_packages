    cdbs
  , debhelper (>= 9)
  , haskell-devscripts (>= 0.8.15)
  , ghc (>= 6.12)
  , ghc-prof
  , libghc-network-dev
  , libghc-network-prof
  , libpcap0.8-dev
Build-Depends-Indep:
    ghc-doc
  , libghc-network-doc
  , haddock
Standards-Version: 3.9.4
