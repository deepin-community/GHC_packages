#! /bin/sh
# postrm script for ghc6
#
# SOURCE: ghc6.postrm.in

set -e

execdir=/usr/bin
libdir=/usr/lib/ghc-@VERSION@
bindir=$libdir/bin
vardir=/var/lib/ghc-@VERSION@

case "$1" in
    purge)
        rm -f $vardir/package.conf
    ;;
    upgrade)
        if dpkg --compare-versions "$2" ge "@VERSION@++" ||
           dpkg --compare-versions "$2" le "@VERSION@"
        then
            rm -f $vardir/package.conf
        fi
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

