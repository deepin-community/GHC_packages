#! /bin/sh
# postrm script for ghc6
#
# SOURCE: ghc6.postrm.in

set -e

execdir=/usr/bin
libdir=/usr/lib/ghc-@VERSION@
bindir=$libdir/bin

case "$1" in
    purge)
        rm -f $libdir/package.conf
        rm -f $libdir/package.conf.old
    ;;
    upgrade)
        if dpkg --compare-versions "$2" ge "@VERSION@++" ||
           dpkg --compare-versions "$2" lt "@VERSION@"
        then
            rm -f $libdir/package.conf
            rm -f $libdir/package.conf.old
        fi
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
